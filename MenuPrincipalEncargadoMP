        private JTable crearTabla(){
        
        String col[] = {"Nombre", "Descripcion"};
        
        DefaultTableModel tablaModelo = new DefaultTableModel(col , 0);
        
        for(int i = 0; i<frmLogin.mListaDeRoles.size();i++){
        
            String nombre = frmLogin.mListaDeRoles.get(i).getNombre();
            String descripcion = frmLogin.mListaDeRoles.get(i).getDescripcion();
            
            Object[] data = {nombre, descripcion};
            
            tablaModelo.addRow(data);
        
        }
        
        JTable tablaRoles = new JTable(tablaModelo);
        tablaRoles.setBounds(50,50,200,300);
        
        return tablaRoles;
        
    }

    
