    public frmMenuPrincipalEncargadoMP() {
        
        initComponents();
        if(frmLogin.mEsAdmin && frmLogin.mEsEncargadoPEP && frmLogin.mEsEncargadoPT && frmLogin.mEsEncargadoMP){
            
            //Cambiar color
            pnlFondo.setBackground(new java.awt.Color(187, 41, 10));
            this.menuInicio.setVisible(true);
            this.menuMateriaPrima.setVisible(true);            
            
        }else if(frmLogin.mEsAdmin){
            
            //Cambiar el color
            pnlFondo.setBackground(new java.awt.Color(170, 53, 109));
            this.menuInicio.setVisible(true);
            this.menuMateriaPrima.setVisible(true);
            
        }else if(frmLogin.mEsEncargadoPEP){
            
            //Cambiar el color
            pnlFondo.setBackground(new java.awt.Color(22, 144, 163));
            this.menuInicio.setVisible(true);
            this.menuMateriaPrima.setVisible(false);
            
        }else if(frmLogin.mEsEncargadoMP){
            
            //Cambiar el color
            pnlFondo.setBackground(new java.awt.Color(22, 144, 163));
            this.menuInicio.setVisible(true);
            this.menuMateriaPrima.setVisible(true);
            
        }else if(frmLogin.mEsEncargadoPT){
            
            //Cambiar el color
            pnlFondo.setBackground(new java.awt.Color(22, 144, 163));
            this.menuInicio.setVisible(true);
            this.menuMateriaPrima.setVisible(false);
            
        }
        
        this.setLocationRelativeTo(null);
        
    }

