    public frmMenuPrincipal() {
        
        initComponents();
        if(frmLogin.mEsAdmin && frmLogin.mEsEncargadoPEP){
            
            //Cambiar color
            pnlFondo.setBackground(new java.awt.Color(187, 41, 10));
            this.menuInicio.setVisible(true);
            this.menuUsuario.setVisible(true);
            this.menuProductoTerminado.setVisible(true);
            this.menuEstadisticas.setVisible(true);            
            
        }else if(frmLogin.mEsAdmin){
            
            //Cambiar el color
            pnlFondo.setBackground(new java.awt.Color(170, 113, 208));
            this.menuInicio.setVisible(true);
            this.menuUsuario.setVisible(true);
            this.menuProductoTerminado.setVisible(true);
            this.menuEstadisticas.setVisible(true);
            
            
        }else if(frmLogin.mEsEncargadoPEP){
            
            //Cambiar el color
            pnlFondo.setBackground(new java.awt.Color(22, 144, 163));
            this.menuInicio.setVisible(true);
            this.menuUsuario.setVisible(false);
            this.menuProductoTerminado.setVisible(true);
            this.menuEstadisticas.setVisible(false);
            
        }
        
        this.setLocationRelativeTo(null);
        
    }

